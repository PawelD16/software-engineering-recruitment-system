@model IEnumerable<projektowaniaOprogramowania.ViewModels.CollegeStructures.WydzialViewModel>

<h1>@ViewBag.Header</h1>

 <form asp-action="Index" method="get">

	<div class="d-flex flex-row text-center">
		<div class="form-field col-md-6">
			<label for="department">Wydział: wybierz wydział</label>
			<select name="wydzialIdFilter">
				@foreach (var wydzial in Model)
				{
					<option value="@wydzial.Id" selected="@(ViewBag.WydzialIdFilter == wydzial.Id ? "selected" : "")">@wydzial.NazwaWydzialu</option>
				}
			</select>
		</div>
		<div class="form-field col-md-6">
			<label for="programName">Nazwa kierunku:</label>
			<input type="text" name="kierunekNameFilter">
		</div>
	</div>
	<div class="text-center">
		<button class="btn-primary" type="submit">Wyszukaj</button>
	</div>
</form>
